@model IEnumerable<MvcCoreAWSElastiCache.Models.Personaje>

@{
    ViewData["Title"] = "Favoritos";
}

<h1>Favoritos</h1>

@if (Model != null)
{
    <table class="table table-bordered table-danger">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdPersonaje)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPersonaje)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        <img src="@item.Imagen"
                             style="width:120px; height: 150px;" />
                    </td>
                    <td>@Html.ActionLink("Details", "Details", new { id = item.IdPersonaje })</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 style="color:red">No hay personajes almacenados en AWS Cache</h1>
}

